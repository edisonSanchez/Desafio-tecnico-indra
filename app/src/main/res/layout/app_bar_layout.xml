<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <TextView
        android:id="@+id/title_app"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size_app_bar"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/boton_refrescar"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/icono_refrescar"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/text_size"
        android:layout_width="@dimen/size_button_refresh"
        android:layout_height="@dimen/size_button_refresh"/>

</androidx.appcompat.widget.Toolbar>